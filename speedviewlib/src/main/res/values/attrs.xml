<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Speedometer">
        <attr name="indicatorColor" format="color" />
        <attr name="centerCircleColor" format="color" />
        <attr name="markColor" format="color" />
        <attr name="lowSpeedColor" format="color" />
        <attr name="mediumSpeedColor" format="color" />
        <attr name="highSpeedColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="backgroundCircleColor" format="color" />
        <attr name="speedTextColor" format="color"/>
        <attr name="speedometerColor" format="color"/>
        <attr name="speedometerWidth" format="dimension" />
        <attr name="maxSpeed" format="integer" />
        <attr name="withTremble" format="boolean" />
        <attr name="speedTextSize" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="unit" format="string" />

        <attr name="unitTextSize" format="dimension"/>
        <attr name="trembleDegree" format="float" />
        <attr name="trembleDuration" format="integer" />
        <attr name="startDegree" format="integer" />
        <attr name="endDegree" format="integer" />
        <attr name="lowSpeedPercent" format="integer" />
        <attr name="mediumSpeedPercent" format="integer" />
        <attr name="speedometerTextRightToLeft" format="boolean" />

        <attr name="minSpeed" format="integer" />
        <attr name="indicatorWidth" format="dimension" />

        <attr name="indicator" format="enum" >
            <enum name="NoIndicator" value="0" />
            <enum name="NormalIndicator" value="1" />
            <enum name="NormalSmallIndicator" value="2" />
            <enum name="TriangleIndicator" value="3" />
            <enum name="SpindleIndicator" value="4" />
            <enum name="LineIndicator" value="5" />
            <enum name="HalfLineIndicator" value="6" />
            <enum name="QuarterLineIndicator" value="7" />
        </attr>

        <attr name="accelerate" format="float" />
        <attr name="decelerate" format="float" />

        <attr name="speedTextTypeface" format="string" />
        <attr name="textTypeface" format="string" />

        <attr name="speedometerMode" format="enum" >
            <enum name="NORMAL" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="TOP" value="2" />
            <enum name="RIGHT" value="3" />
            <enum name="BOTTOM" value="4" />
            <enum name="TOP_LEFT" value="5" />
            <enum name="TOP_RIGHT" value="6" />
            <enum name="BOTTOM_RIGHT" value="7" />
            <enum name="BOTTOM_LEFT" value="8" />
        </attr>

        <attr name="speedTextPosition" format="enum" >
            <enum name="TOP_LEFT" value="0" />
            <enum name="TOP_CENTER" value="1" />
            <enum name="TOP_RIGHT" value="2" />
            <enum name="LEFT" value="3" />
            <enum name="CENTER" value="4" />
            <enum name="RIGHT" value="5" />
            <enum name="BOTTOM_LEFT" value="6" />
            <enum name="BOTTOM_CENTER" value="7" />
            <enum name="BOTTOM_RIGHT" value="8" />
        </attr>
        <attr name="unitUnderSpeedText" format="boolean" />
        <attr name="unitSpeedInterval" format="dimension" />
        <attr name="speedTextFormat" format="enum" >
            <enum name="INTEGER" value="0" />
            <enum name="FLOAT" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SpeedView" parent="Speedometer">
    </declare-styleable>

    <declare-styleable name="DeluxeSpeedView" parent="Speedometer">

        <attr name="speedBackgroundColor" format="color" />
        <attr name="withEffects" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AwesomeSpeedometer" parent="Speedometer">
        <attr name="speedometerColor" />
        <attr name="trianglesColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RaySpeedometer" parent="DeluxeSpeedView">
        <attr name="speedBackgroundColor" />
        <attr name="withEffects" />
        <attr name="rayColor" format="color"/>
        <attr name="degreeBetweenMark" format="integer"/>
        <attr name="markWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PointerSpeedometer" parent="Speedometer">
        <attr name="speedometerColor" />
        <attr name="pointerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TubeSpeedometer" parent="Speedometer">
        <attr name="speedometerColor" />
        <attr name="withEffects3D" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ImageSpeedometer" parent="Speedometer">
        <attr name="imageSpeedometer" format="reference" />
    </declare-styleable>
</resources>